#!/bin/sh
echo "ğŸš€ Auto-pushing changes to remote..."
branch="$(git rev-parse --abbrev-ref HEAD)"
remote="origin"
if [ -n "$branch" ] && [ "$branch" != "HEAD" ]; then
  git push "$remote" "$branch"
  echo "âœ… Push completed."
else
  echo "âš ï¸ Could not determine branch or on detached HEAD, skipping push."
fi
